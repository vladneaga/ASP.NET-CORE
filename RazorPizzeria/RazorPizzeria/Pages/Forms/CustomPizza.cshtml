@page
@addTagHelper *,    Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}
<body>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>
<a class="nav-link text-dark" asp-area="" asp-page="/Checkout/Checkout">Checkout</a>
<div class="align-content-center container">
    <h1>Create your own pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 pb-5 px-5 pt-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza name"/>
        <br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce" />TomatoSauce
        <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />Cheese
        <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" />Mushroom
        <br />
        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni" />Peperoni
        <br />
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" />Ham
        <br />
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" />Beef
        <br />
        
        <button class="btn btn-primary mt-1" type="submit">Order my pizza</button>
    </form>
    
</div>