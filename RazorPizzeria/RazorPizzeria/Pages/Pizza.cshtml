@page
@model RazorPizzeria.Pages.PizzaModel
@{
}
@*<a class="nav-link text-dark" asp-area="" asp-page="Forms/CustomPizza">Custom Pizza</a>
<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>*@
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Our great selection of pizzas</h1>
            <h4>Choose one, or try our builder!</h4>
            <h4>No need to give any of your details!</h4>
            <h4>We already know everything!</h4>
            <p class="smallText"><i>Only one pizza per Order</i></p>
    </div>
        <div class="container">
            <div class="row">
                <div class="col-12 mb-5 mt-5">
                    <div class="w-100 row makeYourOwnDiv">
                        <div class="col-4"> 
                            <img src="~/images/Pizzas/Create.png" class="w-100"/>
                        </div>
                        <div class="col-8" align-items-center>
                            <div class="align-middle makeYourOwnText">
                                <h3 style="text-align:left;">Create your own pizza</h3>
                                <p style="text-align:left;">Make your own pizza with our own pizza maker </p>
                                <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza">Try now</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                    @foreach(var item in @Model.fakePizzaDB)
                {
                var imagePath = "~/images/Pizzas/" + item.ImageTitle + ".png";

                <div class="col-4 mb-5">
                    
                    <a class="pizzaDisplay" asp-area="" asp-page="Checkout/Checkout"
                       asp-route-ImageTitle="@item.ImageTitle"
                       asp-route-Price="@item.FinalPrice"
                       asp-route-PizzaName="@item.PizzaName">
                        <img src=@imagePath class="w-100" asp-append-version=true />

                   </a>
                    <br />
                    </div>
                }
               
                
            </div>    
        </div>
    </div>
